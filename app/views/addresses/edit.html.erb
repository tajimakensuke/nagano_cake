<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">配送先編集</h2>
</div>

<%= form_with model:@address, local:true do |f| %>
<div class = "row">
<label class= "col-md-1">郵便番号</label>
<div class = "col-md-3"><%= f.text_field :postal_code, autofocus: true %></div>
</div>

<div class = "row">
<label class = "col-md-1">住所</label>
<div class = "col-md-3"><%= f.text_field :address %></div>
</div>

<div class ="row">
<label class = "col-md-1">宛名</label>
<div class = "col-md-3"><%= f.text_field :name %></div>
</div>

<%= f.submit "変更内容を保存", class: 'btn btn-success' %>

<% end %> 