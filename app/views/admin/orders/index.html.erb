<div class = "container">
    <div class "row mx-auto m-3" >
      <h2>注文履歴一覧</h2>
    </div>

    <div class ="col">
      <table class ="table">
        <thead class="thead-dark">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

      <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d/%t') %></td>
            <td><%= order.customer.first_name + order.customer.last_name %></td>
            <td><%= order.orders_details.sum(:amount) %></td>

            <% if order.status == "waiting" %>
            <td><%= "入金待ち" %></td>
            <% elsif order.status == "confirmation" %>
            <td><%= "入金確認" %></td>
            <% elsif order.status == "creating" %>
            <td><%= "作成中" %></td>
            <% elsif order.status == "ready" %>
            <td><%= "発送準備中" %></td>
            <% end %>
            </tr>
      <% end %>
      </table>
    </div>


</div>