<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<header class="shadow-sm navbar-dark bg-dark text-">
  <nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
     <a class="navbar-brand p-3" href="/"><%= "NaganoCake" %></a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">

  <% if customer_signed_in? %>
      <li>
        <li class="nav-item text-white m-2">
          ようこそ<%= current_customer.first_name %>さん！
      </li>
      <li class="nav-item">
        <%= link_to "マイページ", customer_path(current_customer), class:'fas fa-home text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "商品一覧", items_path, class: 'fas fa-users text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "カート", cart_items_path, class:'fas fa-book-open text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:'fas fa-sign-out-alt text-white m-2' %>
      </li>
    <% elsif admin_signed_in?  %>
      <li class="nav-item">
        <%= link_to "商品一覧", admin_items_path, class:'fas fa-home text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "会員一覧", root_path, class: 'fas fa-users text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "注文履歴一覧", root_path, class:'fas fa-book-open text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "ジャンル一覧",  admin_genres_path, class:'fas fa-sign-out-alt text-white m-2' %>
      </li>
      <li class="nav-item">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:'fas fa-sign-out-alt text-white m-2' %>
      </li>

    <% else %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "fas fa-home text-white m-2" %>
        </li>
      <li class="nav-item">
        <%= link_to "About", about_homes_path, class:"fas fa-link text-white m-2" %>
      </li>
      <li class="nav-item">
        <%= link_to "sign up", new_customer_registration_path, class:"fas fa-user-plus text-white m-2 " %>
      </li>
      <li class="nav-item">
        <%= link_to "login", new_customer_session_path, class:"fas fa-sign-in-alt text-white m-2 " %>
      </li>
    <% end %>
    </ul>
    </div>
    </nav>
    </header>










  </head>

  <body>
    <%= yield %>
  </body>
</html>
