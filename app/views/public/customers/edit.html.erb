<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">会員情報編集</h2>
</div>

<%= form_with model:@customer, local:true do |f| %>
  <table class="proftaable">
    <tr>
      <th>氏名</th>
      <th><%= f.text_field :first_name %><%= f.text_field :last_name %></th>
    </tr>

    <tr>
      <th>カナ</th>
      <th><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></th>
    </tr>

    <tr>
      <th>郵便番号</th>
      <th><%= f.text_field :postal_code %></th>
    </tr>

    <tr>
      <th>住所</th>
      <th><%= f.text_field :address %></th>
    </tr>

    <tr>
      <th>電話番号</th>
      <th><%= f.text_field :telephone_number %></th>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <th><%= f.text_field :email %></th>
    </tr>

  </table>
  <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
  <% end %>
  <%= link_to "退会する",  unsubcribe_customer_path %>