<div class = "container">

<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">商品一覧</h2>
</div>


<table class = "mx-auto m-5">
  <tr>
    <td>商品ID</td>
    <td>商品名</td>
    <td>税抜き価格</td>
    <td>ジャンル</td>
    <td>ステータス</td>
  </tr>

  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to item.name, admin_item_path(item) %></td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>


    <td>
    <% if item.is_active == true %>
      販売中
    <% else %>
      販売停止中
    <% end %>
    </td>



  </tr>
  <% end %>
</table>
</div>