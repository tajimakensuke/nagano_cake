<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">商品詳細</h2>
</div>

<div class ="row">
  <div class ="col-md-6 ">
    <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg'%>
  </div>
  <div class = "col-md-6 ">
    <table>
      <tr>
        <td>
          商品名
        </td>
        <td>
          <%= @item.name %>
        </td>
      </tr>
      <tr>
        <td>
          商品説明
        </td>
        <td>
          <%= @item.introduction %>
        </td>
      </tr>
      <tr>
        <td>
          ジャンル
        </td>
        <td>
          <%= @item.genre.name %>
        </td>
      </tr>
      <tr>
        <td>
          販売ステータス
        </td>
        <td>
          <% if @item.is_active == true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
  </div>
</div>