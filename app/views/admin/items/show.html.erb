<div class="container">
  <div class="row mt-2">
    <h2 class="bg-secondary text-white">商品詳細</h2>
  </div>

  <div class ="row">
    <div class ="col-md-4 mt-2 ml-5">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg'%>
    </div>
    <div class = "col-md-6 pt-5">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <th>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
            販売中
            <% else %>
            販売停止中
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
    </div>
  </div>
</div>