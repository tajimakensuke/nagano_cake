<div class= "container">
  <div class="row mt-3">
    <h2 class="bg-secondary text-white ">管理者ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table>
        <div class="row">
        <div class="col-md-2">
          <p>メールアドレス</p>
        </div>


        <div class="col-md-4">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        </div>


        <div class="row">
        <div class="col-md-2">
          <p>パスワード</p>
        </div>

        <div class="col-md-4">
          <div class="field">
            <%= f.password_field :password, autofocus: true, autocomplete: "password" %>
          </div>
        </div>
        </div>
    </table>
    <div class="col-md-2 ml-5">
      <%= f.submit "ログイン", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>