<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="container">
  <div class = "row mt-3 text-left" >
      <h2 class="bg-secondary text-white">ジャンル一覧・追加</h2>
  </div>

  <div calss="mx-auto ">
    <%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>
      <table>
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
        </tr>
      </table>
    <% end %>
  </div>

  <div class = "col-md-6 m-3" >
      <table class = "table">
       <tr>
         <th>ジャンル</th>
       </tr>

       <% @genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
       </tr>
       <% end %>
     </table>

  </div>

</div>