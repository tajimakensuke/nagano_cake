<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">ログイン</h2>
</div>

<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">会員の方はこちらからログイン</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="col-md-2">
    <p>メールアドレス</p>
  </div>


  <div class="col-md-4">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-2">
    <p>パスワード</p>
  </div>

  <div class="col-md-4">
    <div class="field">
      <%= f.password_field :password, autofocus: true, autocomplete: "password" %>
    </div>
  </div>
</div>


  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->


 <div class="row mb-2">
  <div class="col-md-2"></div>
  <div class="col-md-1">
    <%= f.submit "ログイン", class: 'btn btn-success btn-block mb-3' %>
  </div>
  </div>
<% end %>


<div class="col-md-2">
  <h2 class="bg-secondary text-white text-center">会員登録がおすみでない方</h2>
</div>
<%= link_to "こちら", new_registration_path(resource_name) %>から新規登録してください
</div>

<%= render "devise/shared/links" %>
