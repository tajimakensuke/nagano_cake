<div class = "container">
    <div class = "row mt-3" >
      <h2 class="bg-secondary text-white ">注文履歴一覧</h2>
    </div>

    <div class ="col">
      <table class ="table">
        <thead class="thead-dark">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

      <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d/%t'), admin_order_path(order.id) %></td>
            <td><%= order.customer.first_name + order.customer.last_name %></td>
            <td><%= order.orders_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
      </table>
      
    </div>


</div>