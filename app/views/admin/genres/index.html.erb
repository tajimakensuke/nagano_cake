<div class="container">
  <div class = "mx-auto m-3" >
      <h2>ジャンル一覧・追加</h2>
  </div>


  <div calss = "mx-auto ">
    <%= form_with modle: @genre do |f| %>
    <table>
      <tr>
        <th>ジャンル名</th>
        <td> <%= f.text_field :name %></td>
        <td><%= f.submit "新規登録", class: 'btn btn-success btn-block' %></td>
      </tr>
    </table>
    <% end %>
  </div>

  <div class = "col-md-6 m-3" >
      <table class = "table">
       <tr>
         <th>ジャンル</th>
       </tr>

       <% @genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
       </tr>
       <% end %>
     </table>

  </div>

</div>