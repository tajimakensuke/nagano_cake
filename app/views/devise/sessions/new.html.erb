<div class="container">
  <div class = "row text-left">
  <h2 class="bg-secondary text-white mt-5">ログイン</h2>
  </div>

  <div class = "row text-left">
  <h2 class="bg-secondary text-white">会員の方はこちらからログイン</h2>
  </div>




<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row mt-3">
  <div class="col-md-2 ">
    <p>メールアドレス</p>
  </div>


  <div class="col-md-4">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
</div>


<div class="row mb-3">
  <div class="col-md-2">
    <p>パスワード</p>
  </div>

  <div class="col-md-4">
    <div class="field">
      <%= f.password_field :password, autofocus: true, autocomplete: "password" %>
    </div>
  </div>
</div>


 <div class="row mb-2">
    <div class="col-md-1">
      <%= f.submit "ログイン", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>



<div class="row">
  <h2 class="bg-secondary text-white">会員登録がおすみでない方</h2>
</div>
<%= link_to "こちら", new_registration_path(resource_name) %>から新規登録してください


</div>

<%= render "devise/shared/links" %>
