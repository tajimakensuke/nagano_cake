<div class = "container">
  <div class="mx-auto">
    <h2 class="bg-secondary text-white text-center">会員一覧</h2>
  </div>

  <div class = "mx-auto" >
    <table>
      <tr>
        <td>会員ID</td>
        <td>氏名</td>
        <td>メールアドレス</td>
        <td>ステータス</td>
      </tr>

    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.first_name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td>
        <% if customer.is_deleted == true %>
          有効
        <% else %>
          退会
        <% end %>
        </td>
      </tr>
    </table>
  </div>
  <% end %>



</div>