<div class = "container">
    <div class "row mx-auto m-3" >
      <h2>注文履歴詳細</h2>
    </div>

    <table class = "table table-bordered">
        <tr>
          <th>購入者</th>
          <td> <%= @order.customer.first_name + @order.customer.last_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %>  <%= @order.address %>
              </br><%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>

            <td><%= @order.payment_method_i18n %></td>

        </tr>
        <%= form_with model: @order, url:admin_order_path, method: :patch, local: true do |f| %>
        <tr>
          <th>注文ステータス</th>
          <td><%= f.select :status,Order.statuses_i18n.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
              <%= f.submit "更新", class: 'btn btn-success' %></td>
              <% end %>
        </tr>
      </table>




      <div class ="row">
        <div class = "col-md-8" >

          <table class = "table">
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>制作ステータス</th>
            </tr>
            <% @order.orders_details.each do |orders_detail| %>
            <tr>
              <td><%= orders_detail.item.name %></td>
              <td><%= orders_detail.price %></td>
              <td><%= orders_detail.amount %></td>
              <td><%= orders_detail.price * orders_detail.amount %></td>


              <td>
                <%= form_with model: orders_detail ,url:admin_order_detail_path, method: :patch, local: true do |f| %>
<%= f.select :making_status, OrdersDetail.making_statuses_i18n.keys.map {|k| [I18n.t("enums.orders_detail.making_status.#{k}"), k]} %>
              <%= f.submit "更新", class: 'btn btn-success' %>
              <% end %>
              </td>
            </tr>
            <% end %>
          </table>

        </div>



        <div class = "col-md-4">
          <table class = "table" >
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_payment - 800 %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_payment %></td>
            </tr>
          </table>
        </div>
      </div>







</div>