
<div class = "container">
    <div class "row mx-auto m-3" >
      <h2>注文履歴一覧</h2>
    </div>


    <div class = "mx-auto">
       <table class = "table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td>
        <% order.orders_details.each do |orders_detail| %>
        <%= orders_detail.item.name %></br>
        <% end %>
        </td>
        <td><%= order.total_payment %></td>



        <% if order.status == "waiting" %>
          <td><%= "入金待ち" %></td>
        <% elsif order.status == "confirmation" %>
          <td><%= "入金確認" %></td>
        <% elsif order.status == "creating" %>
          <td><%= "作成中" %></td>
        <% elsif order.status == "ready" %>
          <td><%= "発送準備中" %></td>
        <% end %>

        <td><%= link_to "表示する", order_path(order.id) %></td>

      </tr>
      <% end %>
      </table>
    </div>
    </div>

</div>