
<div class = "container">
    <div class "row mx-auto m-3" >
      <h2>注文履歴一覧</h2>
    </div>


    <div class = "mx-auto">
       <table class = "table table-bordered">
        <thead class="thead-dark">
          <tr>
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <td>ステータス</td>
            <td>注文詳細</td>
          </tr>
        </thead>

      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td>
        <% order.orders_details.each do |orders_detail| %>
        <%= orders_detail.item.name %></br>
        <% end %>
        </td>

        <td><%= order.total_payment %></td>
        <td>ステータス</td>

      </tr>
      <% end %>
      </table>
    </div>
    </div>

</div>