<div class = "container">
  <div class="mx-auto">
    <h2 class="bg-secondary text-white text-center">
      <%= @customer.first_name %><%=@customer.last_name %> さんの会員詳細</h2>
  </div>


  <!--main-->

  <div class = "mx-auto" >
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %>  <%= @customer.last_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.first_name_kana %>  <%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @customer.is_deleted == true %>
          有効
        <% else %>
          退会
        <% end %>
        </td>
      </tr>
    </table>
   </div>

   <%= link_to "編集する",  edit_admin_customer_path, class: 'btn btn-success'%>

</div>