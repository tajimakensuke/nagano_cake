<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="container">
  <div class="row text-left mt-3">
    <h2 class="bg-secondary text-white ">商品新規登録登録</h2>
  </div>




  <div class="item_new">
  <%= form_with model: @item, url:admin_items_path, method: :post, local: true do |f| %>
  <div class="row">
    <div class= "col-md-4">商品画像</div>
    <div class= "col-md-4"><%= f.attachment_field :image %></div>
  </div>

  <div class="row">
    <div class= "col-md-4">商品名</div>
    <div class= "col-md-4"> <%= f.text_field :name %></div>
  </div>

  <div class="row">
    <div class= "col-md-4">商品説明</div>
    <div class= "col-md-4"> <%= f.text_area :introduction %></div>
  </div>

  <div class="row">
    <div class= "col-md-4">ジャンル</div>
    <div class= "col-md-4"> <%= f.collection_select(:genre_id, @genre, :id, :name) %></div>
    </div>

  <div class="row">
    <div class= "col-md-4">税抜き価格</div>
    <div class= "col-md-4"> <%= f.text_field :price %></div>
  </div>

  <div class="row">
    <div class= "col-md-4">販売ステータス</div>
      <div class= "col-md-1"><%= f.radio_button :is_active, :true %>販売中</div>
      <div class= "col-md-2"><%= f.radio_button :is_active, :false %>販売停止中</div>
  </div>

  <%= f.submit "新規登録", class: 'btn btn-success btn-block mb-3 col-md-2' %>
  <% end %>
  </div>
</div>