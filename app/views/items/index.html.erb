<div class = "container">
    <div class "mx-auto m-3" >
      <h2>商品一覧</h2>
    </div>


<div class = "d-flex flex-wrap">
    <% @items.each do |item| %>

      <div class = "col-3">
        <div><%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg'%></div>
        <% end %>
        <div><%= item.name %></div>
        <div>￥<%= item.price %></div>
       </div>

  <% end %>
   </div>
</div>


  <div class = "d-flex justify-content-center">
  <%= paginate @items %>
  </div>
