<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class = "row mt-3" >
    <h2 class="bg-secondary text-white text-center">ジャンル編集</h2>
  </div>

    <%= form_with model:@genre, url:admin_genre_path, method: :patch, local:true do |f| %>
    <div class = "row">
      <div class ="col-md-2">ジャンル名</div>
      <div class ="col-md-3">

    <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="col-md-2">
    <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
    </div>
    <% end %>

    </div>
</div>